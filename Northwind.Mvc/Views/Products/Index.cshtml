@model Northwind.Mvc.Models.ProductsViewModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Products</h1>
    </div>
</div>

<table class="table table-striped table-bordered" id="products-supplier">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().QuantityPerUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().UnitsOnOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().ReorderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().Discontinued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOverviewList.FirstOrDefault().SupplierCompanyName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductOverviewList)
        {
            <tr class="@(item.Discontinued.Equals(true) ? "danger" : "") center">
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityPerUnit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsOnOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReorderLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discontinued)
                </td>
                <td>
                    <div>
                        <div>
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse_@(item.ProductId)">@Html.DisplayFor(modelItem => item.SupplierCompanyName)</a>
                        </div>
                        <div id="collapse_@(item.ProductId)" class="collapse col-sm-10">
                            <div class="row">
                                @Html.DisplayFor(modelItem => item.SupplierDetails.ContactTitle)
                                @Html.DisplayFor(modelItem => item.SupplierDetails.ContactName)
                            </div>
                            <div class="row">
                                @Html.DisplayFor(modelItem => item.SupplierDetails.Address)
                                @Html.DisplayFor(modelItem => item.SupplierDetails.City),
                                @Html.DisplayFor(modelItem => item.SupplierDetails.Region)
                                @Html.DisplayFor(modelItem => item.SupplierDetails.Country)
                                @Html.DisplayFor(modelItem => item.SupplierDetails.PostalCode)
                            </div>
                            <div class="row">
                                @Html.DisplayFor(modelItem => item.SupplierDetails.Phone)
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
